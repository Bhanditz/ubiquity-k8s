[Unit]
Description=ubiquity k8 dynamic provisioner
Documentation=https://github.ibm.com/almaden-containers/ubiquity-k8s
After=network.target
After=docker.service
Requires=docker.service

[Service]
Type=simple
User=ubiquity
EnvironmentFile=/etc/ubiquity/ubiquity-provisioner.env
ExecStart=/usr/bin/provisioner \
          $UBIQUITY_CLIENT_CONFIG \
          $KUBE_CONFIG \
          $PROVISIONER_NAME \
          $PROVISIONER_ARGS

Restart=on-abort

[Install]
WantedBy=multi-user.target
